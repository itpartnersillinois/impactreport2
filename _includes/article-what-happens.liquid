<!doctype html>
<html lang="en">
    <head>
        {% include head.liquid %}
    </head>
    <body class="{{ bodyClass }}">
    <div class="page">
        <header>
            {% include header.liquid %}
        </header>
        <main id="article">
            <ilw-spacer height="60px"></ilw-spacer>
            <ilw-content width="page">
                <div class="section-pill {{ section }}">{{ section }}</div>
                <ilw-spacer height="30px"></ilw-spacer>
                <h1 class="what-happens-title">What Happens When Students Follow Their Passion?</h1>
                <p class="what-happens-subtitle">Good things.</p>
                <p class="byline">{{ byline }}</p>
            </ilw-content>
            {{ content }}
            {% include arrows.liquid %}
        </main>
        {% include footer.liquid %}
    </div>
    </body>
</html>